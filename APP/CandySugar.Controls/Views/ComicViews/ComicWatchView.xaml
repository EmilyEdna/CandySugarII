<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CandySugar.Controls.Views.ComicViews.ComicWatchView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ctrl="clr-namespace:CandySugar.Library.PropertyAttach;assembly=CandySugar.Library"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:vm="clr-namespace:CandySugar.Controls.ViewModels.ComicViewModels"
    x:DataType="vm:ComicWatchViewModel"
    Shell.NavBarIsVisible="False">
    <ContentPage.BindingContext>
        <vm:ComicWatchViewModel />
    </ContentPage.BindingContext>
    <CollectionView ItemSizingStrategy="MeasureAllItems" ItemsSource="{Binding Img}">
        <CollectionView.ItemsLayout>
            <LinearItemsLayout ItemSpacing="3" Orientation="Vertical" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="sys:String">
                <Border
                    Padding="5"
                    Stroke="{StaticResource Gray100Brush}"
                    StrokeThickness="1">
                    <Image ctrl:ImageDependencyProperty.Source="{Binding .}" Aspect="Fill" />
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>