    <Grid>
        <!--  加载动画  -->
        <hc:LoadingCircle Foreground="{DynamicResource SugarThemeDefault}" Visibility="{Binding Loading, Converter={StaticResource ToShow}}" />
        <StackPanel>
            <ListBox
                Background="Transparent"
                BorderThickness="0"
                ItemsSource="{Binding Handle}"
                Style="{StaticResource WrapPanelHorizontalListBox}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <lib:CandyButton
                            Margin="20,5"
                            s:View.ActionTarget="{Binding DataContext, ElementName=MusicViewName}"
                            Command="{s:Action CategoryAction}"
                            CommandParameter="{Binding Key}"
                            Content="{Binding Value}"
                            Opacity="1"
                            Style="{StaticResource CategoryBtn}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height=".8*" />
                <RowDefinition Height=".2*" />
            </Grid.RowDefinitions>
            <!--  主体内容  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".4*" />
                    <ColumnDefinition Width=".6*" />
                </Grid.ColumnDefinitions>
                <!--  功能栏  -->
                <Grid>
                    <ListBox
                        x:Name="HandleFuncListBox"
                        Width="{c:Binding (ScreenHeight*0.8),
                                          Source={x:Static res:CandySoft.Default}}"
                        Height="30"
                        Margin="0,45,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Style="{StaticResource MaterialDesignToolToggleListBox}">
                        <ListBox.Background>
                            <SolidColorBrush Opacity=".5" Color="WhiteSmoke" />
                        </ListBox.Background>
                        <ListBoxItem
                            Content="单曲"
                            IsSelected="True"
                            MouseUp="MouseUpChanged">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Selected">
                                    <i:InvokeCommandAction
                                        s:View.ActionTarget="{Binding DataContext, ElementName=MusicViewName}"
                                        Command="{s:Action ChangeAction}"
                                        CommandParameter="{Binding Content, RelativeSource={RelativeSource AncestorType=ListBoxItem, Mode=FindAncestor}}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ListBoxItem>
                        <ListBoxItem Content="歌单" MouseUp="MouseUpChanged">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Selected">
                                    <i:InvokeCommandAction
                                        s:View.ActionTarget="{Binding DataContext, ElementName=MusicViewName}"
                                        Command="{s:Action ChangeAction}"
                                        CommandParameter="{Binding Content, RelativeSource={RelativeSource AncestorType=ListBoxItem, Mode=FindAncestor}}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ListBoxItem>
                        <ListBoxItem Content="播放列表" MouseUp="MouseUpChanged">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Selected">
                                    <i:InvokeCommandAction
                                        s:View.ActionTarget="{Binding DataContext, ElementName=MusicViewName}"
                                        Command="{s:Action ChangeAction}"
                                        CommandParameter="{Binding Content, RelativeSource={RelativeSource AncestorType=ListBoxItem, Mode=FindAncestor}}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ListBoxItem>
                    </ListBox>
                    <!--  单曲  -->
                    <Grid x:Name="单曲" RenderTransformOrigin="1,0.5">
                        <Grid.RenderTransform>
                            <TransformGroup>
                                <TranslateTransform />
                            </TransformGroup>
                        </Grid.RenderTransform>
                        <Rectangle
                            Height="{c:Binding (ScreenHeight*0.75),
                                               Source={x:Static res:CandySoft.Default}}"
                            Margin="10,90,0,0"
                            StrokeThickness="0">
                            <Rectangle.Fill>
                                <SolidColorBrush Opacity="0.4" Color="White" />
                            </Rectangle.Fill>
                            <Rectangle.Effect>
                                <DropShadowEffect
                                    BlurRadius="15"
                                    Direction="300"
                                    Opacity="0.3" />
                            </Rectangle.Effect>
                        </Rectangle>
                        <Grid Margin="10,90,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>
                            <ListBox
                                Background="Transparent"
                                BorderThickness="0"
                                ItemsSource="{Binding ItemResult}"
                                Style="{StaticResource WrapPanelVerticalListBox}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="1" />
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="2,0,0,10">
                                            <UniformGrid Columns="2">
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="{DynamicResource SugarThemeSmoke}"
                                                    Text="{Binding SongName}" />
                                                <TextBlock
                                                    HorizontalAlignment="Right"
                                                    Style="{StaticResource Common}"
                                                    Tag="Single">
                                                    <md:PackIcon Margin="0,0,5,0" Kind="PlayCircleOutline" />
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="MouseDown">
                                                            <i:InvokeCommandAction s:View.ActionTarget="{Binding DataContext, ElementName=MusicViewName}" Command="{s:Action PlayListAction}">
                                                                <i:InvokeCommandAction.CommandParameter>
                                                                    <MultiBinding Converter="{StaticResource ToMulti}">
                                                                        <Binding Path="Tag" RelativeSource="{RelativeSource AncestorType=TextBlock, Mode=FindAncestor}" />
                                                                        <Binding Path="SongId" />
                                                                    </MultiBinding>
                                                                </i:InvokeCommandAction.CommandParameter>
                                                            </i:InvokeCommandAction>
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </TextBlock>
                                            </UniformGrid>
                                            <TextBlock
                                                Margin="0,10,0,0"
                                                FontSize="10"
                                                Foreground="{DynamicResource SugarThemeRed}"
                                                Text="{Binding SongArtistName, Converter={StaticResource ToChar}, StringFormat=歌手:({0})}" />
                                            <TextBlock
                                                Margin="0,10,0,0"
                                                Cursor="Hand"
                                                FontSize="10"
                                                Foreground="{DynamicResource SugarThemeRed}"
                                                MouseUp="MouseUpChanged"
                                                Text="{Binding SongAlbumName, StringFormat=专辑:({0})}"
                                                TextWrapping="WrapWithOverflow">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="MouseDown">
                                                        <i:InvokeCommandAction
                                                            s:View.ActionTarget="{Binding DataContext, ElementName=MusicViewName}"
                                                            Command="{s:Action LinkAlbumAction}"
                                                            CommandParameter="{Binding SongAlbumId}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <hc:Pagination
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                IsJumpEnabled="False"
                                MaxPageCount="{Binding Total}"
                                Style="{StaticResource PageinationStyle}"
                                PageIndex="{Binding Page}">
                                <hc:Interaction.Triggers>
                                    <hc:EventTrigger EventName="PageUpdated">
                                        <hc:EventToCommand
                                            s:View.ActionTarget="{Binding DataContext, ElementName=MusicViewName}"
