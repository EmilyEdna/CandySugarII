                        </Grid>
                    </Grid>
                    <!--  歌单  -->
                    <Grid
                        x:Name="歌单"
                        RenderTransformOrigin="1,0.5"
                        Visibility="Collapsed">
                        <Grid.RenderTransform>
                            <TransformGroup>
                                <TranslateTransform />
                            </TransformGroup>
                        </Grid.RenderTransform>
                        <Rectangle
                            Height="{c:Binding (ScreenHeight*0.75),
                                               Source={x:Static res:CandySoft.Default}}"
                            Margin="10,90,0,0"
                            StrokeThickness="0">
                            <Rectangle.Fill>
                                <SolidColorBrush Opacity="0.4" Color="White" />
                            </Rectangle.Fill>
                            <Rectangle.Effect>
                                <DropShadowEffect
                                    BlurRadius="15"
                                    Direction="300"
                                    Opacity="0.3" />
                            </Rectangle.Effect>
                        </Rectangle>
                        <Grid Margin="10,90,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>
                            <ListBox
                                Background="Transparent"
                                BorderThickness="0"
                                ItemsSource="{Binding ItemsResult}"
                                Style="{StaticResource WrapPanelVerticalListBox}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="1" />
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid
                                            Margin="0,0,0,5"
                                            HorizontalAlignment="Left"
                                            Cursor="Hand">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width=".3*" />
                                                <ColumnDefinition Width=".7*" />
                                            </Grid.ColumnDefinitions>
                                            <Border>
                                                <Image
                                                    Width="80"
                                                    Height="80"
                                                    SnapsToDevicePixels="True"
                                                    Source="{Binding Cover}"
                                                    Stretch="Uniform" />
                                                <Border.Effect>
                                                    <DropShadowEffect
                                                        BlurRadius="6"
                                                        Opacity="1"
                                                        ShadowDepth="0"
                                                        Color="{DynamicResource SugarThemePinkColor}" />
                                                </Border.Effect>
                                            </Border>
                                            <StackPanel Grid.Column="1" Margin="2,0,0,0">
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="{DynamicResource SugarThemeSmoke}"
                                                    Text="{Binding SongSheetName, StringFormat=歌单名称:{0}}"
                                                    TextWrapping="WrapWithOverflow" />
                                                <TextBlock
                                                    Margin="0,10,0,0"
                                                    FontSize="10"
                                                    Foreground="{DynamicResource SugarThemeRed}"
                                                    Text="{Binding ListenNumber, StringFormat=播放次数:{0}}" />
                                                <TextBlock
                                                    Margin="0,10,0,0"
                                                    FontSize="10"
                                                    Foreground="{DynamicResource SugarThemeRed}"
                                                    Text="{Binding CreateTime, StringFormat=创建时间:{0:yyyy-MM-dd}}" />
                                                <TextBlock
                                                    Margin="0,10,0,0"
                                                    FontSize="10"
                                                    Foreground="{DynamicResource SugarThemeBlue}"
                                                    MouseUp="MouseUpChanged"
                                                    Text="查看详情">
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="MouseDown">
                                                            <i:InvokeCommandAction
                                                                s:View.ActionTarget="{Binding DataContext, ElementName=MusicViewName}"
                                                                Command="{s:Action ShowSheetAction}"
                                                                CommandParameter="{Binding SongSheetId}" />
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <hc:Pagination
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                IsJumpEnabled="False"
                                MaxPageCount="{Binding Total}"
                                Style="{StaticResource PageinationStyle}"
                                PageIndex="{Binding Page}">
                                <hc:Interaction.Triggers>
                                    <hc:EventTrigger EventName="PageUpdated">
                                        <hc:EventToCommand
                                            s:View.ActionTarget="{Binding DataContext, ElementName=MusicViewName}"
                                            Command="{s:Action PageAction}"
                                            PassEventArgsToCommand="True" />
                                    </hc:EventTrigger>
                                </hc:Interaction.Triggers>
                            </hc:Pagination>
                        </Grid>
                    </Grid>
                    <!--  歌单详情  -->
                    <Grid
                        x:Name="详情"
                        RenderTransformOrigin="1,0.5"
                        Visibility="Collapsed">
                        <Grid.RenderTransform>
                            <TransformGroup>
                                <TranslateTransform />
                            </TransformGroup>
                        </Grid.RenderTransform>
                        <Rectangle
                            Height="{c:Binding (ScreenHeight*0.75),
                                               Source={x:Static res:CandySoft.Default}}"
                            Margin="10,90,0,0"
                            StrokeThickness="0">
                            <Rectangle.Fill>
                                <SolidColorBrush Opacity="0.4" Color="White" />
                            </Rectangle.Fill>
                            <Rectangle.Effect>
                                <DropShadowEffect
                                    BlurRadius="15"
                                    Direction="300"
                                    Opacity="0.3" />
                            </Rectangle.Effect>
                        </Rectangle>
                        <Grid Margin="10,90,0,0">
                            <WrapPanel Orientation="Vertical">
                                <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Border Margin="1,1,0,0">
                                        <Image
                                            Width="80"
                                            Height="80"
                                            SnapsToDevicePixels="True"
                                            Source="{Binding DetailResult.Logo}"
                                            Stretch="Uniform" />
                                        <Border.Effect>
                                            <DropShadowEffect
                                                BlurRadius="6"
                                                Opacity="1"
                                                ShadowDepth="0"
                                                Color="{DynamicResource SugarThemePinkColor}" />
                                        </Border.Effect>
                                    </Border>
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="{DynamicResource SugarThemeSmoke}"
                                            Text="{Binding DetailResult.DissName, StringFormat=歌单名称:{0}}"
                                            TextWrapping="WrapWithOverflow" />
                                        <TextBlock
                                            Margin="0,10,0,0"
                                            FontSize="12"
                                            Foreground="{DynamicResource SugarThemeRed}"
                                            Text="{Binding DetailResult.MusicNum, StringFormat=歌曲数量:{0}}"
                                            TextWrapping="WrapWithOverflow" />
                                        <TextBlock
                                            Margin="0,10,0,0"
                                            FontSize="10"
                                            Foreground="{DynamicResource SugarThemeRed}"
                                            Text="{Binding DetailResult.ListenNum, StringFormat=播放次数:{0}}" />
                                        <TextBlock
                                            Margin="0,10,0,0"
                                            FontSize="10"
                                            Foreground="{DynamicResource SugarThemeRed}"
                                            Text="{Binding DetailResult.CreateTime, StringFormat=创建时间:{0:yyyy-MM-dd}}" />
                                    </StackPanel>
                                </Grid>
                                <UniformGrid HorizontalAlignment="Center">
                                    <hc:Divider
                                        Width="{Binding ScreenWidth, Source={x:Static res:CandySoft.Default}}"
                                        Margin="0,3,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="详情列表"
                                        Foreground="{DynamicResource SugarThemeWhite}"
                                        LineStroke="{DynamicResource SugarThemeWhite}" />
                                </UniformGrid>
                            </WrapPanel>
                            <ListBox
                                Margin="0,95,0,0"
                                Background="Transparent"
                                BorderThickness="0"
                                ItemsSource="{Binding DetailResult.ElementResults}"
                                Style="{StaticResource WrapPanelVerticalListBox}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="1" />
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="2,0,0,10">
                                            <UniformGrid Columns="2">
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="{DynamicResource SugarThemeSmoke}"
                                                    Text="{Binding SongName}" />
                                                <TextBlock
                                                    HorizontalAlignment="Right"
                                                    Style="{StaticResource Common}"
                                                    Tag="Detail">
                                                    <md:PackIcon Margin="0,0,5,0" Kind="PlayCircleOutline" />
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="MouseDown">
                                                            <i:InvokeCommandAction s:View.ActionTarget="{Binding DataContext, ElementName=MusicViewName}" Command="{s:Action PlayListAction}">
                                                                <i:InvokeCommandAction.CommandParameter>
                                                                    <MultiBinding Converter="{StaticResource ToMulti}">
                                                                        <Binding Path="Tag" RelativeSource="{RelativeSource AncestorType=TextBlock, Mode=FindAncestor}" />
                                                                        <Binding Path="SongId" />
                                                                    </MultiBinding>
                                                                </i:InvokeCommandAction.CommandParameter>
                                                            </i:InvokeCommandAction>
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </TextBlock>
                                            </UniformGrid>
                                            <TextBlock
                                                Margin="0,10,0,0"
                                                FontSize="10"
                                                Foreground="{DynamicResource SugarThemeRed}"
                                                Text="{Binding SongArtistName, Converter={StaticResource ToChar}, StringFormat=歌手:({0})}" />
                                            <TextBlock
                                                Margin="0,10,0,0"
                                                Cursor="Hand"
                                                FontSize="10"
                                                Foreground="{DynamicResource SugarThemeRed}"
                                                MouseUp="MouseUpChanged"
                                                Text="{Binding SongAlbumName, StringFormat=专辑:({0})}"
                                                TextWrapping="WrapWithOverflow">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="MouseDown">
                                                        <i:InvokeCommandAction
                                                            s:View.ActionTarget="{Binding DataContext, ElementName=MusicViewName}"
                                                            Command="{s:Action LinkAlbumAction}"
                                                            CommandParameter="{Binding SongAlbumId}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Grid>
                    <!--  专辑  -->
                    <Grid
                        x:Name="专辑"
                        RenderTransformOrigin="1,0.5"
                        Visibility="Collapsed">
                        <Grid.RenderTransform>
                            <TransformGroup>
                                <TranslateTransform />
                            </TransformGroup>
                        </Grid.RenderTransform>
                        <Rectangle
                            Height="{c:Binding (ScreenHeight*0.75),
                                               Source={x:Static res:CandySoft.Default}}"
                            Margin="10,90,0,0"
                            StrokeThickness="0">
                            <Rectangle.Fill>
                                <SolidColorBrush Opacity="0.4" Color="White" />
                            </Rectangle.Fill>
                            <Rectangle.Effect>
                                <DropShadowEffect
                                    BlurRadius="15"
                                    Direction="300"
                                    Opacity="0.3" />
                            </Rectangle.Effect>
                        </Rectangle>
                        <ListBox
                            Margin="10,90,0,0"
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding AlbumResult}"
                            Style="{StaticResource WrapPanelVerticalListBox}">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="1" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="2,0,0,10">
                                        <UniformGrid Columns="2">
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="{DynamicResource SugarThemeSmoke}"
                                                Text="{Binding SongName}" />
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                Style="{StaticResource Common}"
                                                Tag="Album">
                                                <md:PackIcon Margin="0,0,5,0" Kind="PlayCircleOutline" />
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="MouseDown">
                                                        <i:InvokeCommandAction s:View.ActionTarget="{Binding DataContext, ElementName=MusicViewName}" Command="{s:Action PlayListAction}">
                                                            <i:InvokeCommandAction.CommandParameter>
                                                                <MultiBinding Converter="{StaticResource ToMulti}">
                                                                    <Binding Path="Tag" RelativeSource="{RelativeSource AncestorType=TextBlock, Mode=FindAncestor}" />
                                                                    <Binding Path="SongId" />
                                                                </MultiBinding>
                                                            </i:InvokeCommandAction.CommandParameter>
                                                        </i:InvokeCommandAction>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </TextBlock>
                                        </UniformGrid>
                                        <TextBlock
                                            Margin="0,10,0,0"
                                            FontSize="10"
                                            Foreground="{DynamicResource SugarThemeRed}"
                                            Text="{Binding SongArtistName, Converter={StaticResource ToChar}, StringFormat=歌手:({0})}" />
                                        <TextBlock
                                            Margin="0,10,0,0"
                                            Cursor="Hand"
                                            FontSize="10"
                                            Foreground="{DynamicResource SugarThemeRed}"
                                            Text="{Binding SongAlbumName, StringFormat=专辑:({0})}"
                                            TextWrapping="WrapWithOverflow" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                    <!--  列表  -->
                    <Grid
                        x:Name="列表"
                        RenderTransformOrigin="1,0.5"
                        Visibility="Collapsed">
                        <Grid.RenderTransform>
                            <TransformGroup>
                                <TranslateTransform />
                            </TransformGroup>
                        </Grid.RenderTransform>
                        <Rectangle
                            Height="{c:Binding (ScreenHeight*0.75),
                                               Source={x:Static res:CandySoft.Default}}"
                            Margin="10,90,0,0"
                            StrokeThickness="0">
                            <Rectangle.Fill>
                                <SolidColorBrush Opacity="0.4" Color="White" />
                            </Rectangle.Fill>
                            <Rectangle.Effect>
                                <DropShadowEffect
                                    BlurRadius="15"
                                    Direction="300"
                                    Opacity="0.3" />
                            </Rectangle.Effect>
                        </Rectangle>
                        <ListBox
                            Margin="10,90,0,0"
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding CandyList}"
                            Style="{StaticResource WrapPanelVerticalListBox}">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid VerticalAlignment="Top" Columns="1" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="2,0,0,10">
                                        <UniformGrid Columns="2">
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="{DynamicResource SugarThemeSmoke}"
                                                Text="{Binding SongName}" />
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                Cursor="Hand"
                                                Style="{StaticResource Common}">
                                                <md:PackIcon Margin="0,0,5,0" Kind="PlayCircleOutline" />
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="MouseDown">
                                                        <i:InvokeCommandAction
                                                            s:View.ActionTarget="{Binding DataContext, ElementName=MusicViewName}"
                                                            Command="{s:Action DownPlayAction}"
                                                            CommandParameter="{Binding SongId}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </TextBlock>
                                        </UniformGrid>
                                        <TextBlock
                                            Margin="0,10,0,0"
                                            FontSize="10"
                                            Foreground="{DynamicResource SugarThemeRed}"
                                            Text="{Binding SongArtist, Converter={StaticResource ToChar}, StringFormat=歌手:({0})}" />
                                        <TextBlock
                                            Margin="0,10,0,0"
                                            Cursor="Hand"
                                            FontSize="10"
                                            Foreground="{DynamicResource SugarThemeRed}"
                                            MouseUp="MouseUpChanged"
                                            Text="{Binding AlbumName, StringFormat=专辑:({0})}"
                                            TextWrapping="WrapWithOverflow">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseDown">
                                                    <i:InvokeCommandAction
                                                        s:View.ActionTarget="{Binding DataContext, ElementName=MusicViewName}"
                                                        Command="{s:Action AlbumAction}"
                                                        CommandParameter="{Binding AlbumId}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Grid>
                <!--  歌词栏  -->
                <Canvas Grid.Column="1" />
            </Grid>
            <!--  播放器  -->
            <Grid Grid.Row="1" Margin="10,10,0,0">
                <Rectangle Height="{c:Binding ((ScreenHeight-30)*0.2), Source={x:Static res:CandySoft.Default}}" StrokeThickness="0">
                    <Rectangle.Fill>
                        <SolidColorBrush Opacity="0.4" Color="{DynamicResource SugarThemeWhiteColor}" />
                    </Rectangle.Fill>
                    <Rectangle.Effect>
                        <DropShadowEffect
                            BlurRadius="15"
                            Direction="300"
                            Opacity="0.3" />
                    </Rectangle.Effect>
                </Rectangle>
                <Grid
                    Width="200"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <ProgressBar Style="{StaticResource Channel}" Value="{Binding Channel[0]}" />
                    <ProgressBar
                        Grid.Column="1"
                        Style="{StaticResource Channel}"
                        Value="{Binding Channel[1]}" />
