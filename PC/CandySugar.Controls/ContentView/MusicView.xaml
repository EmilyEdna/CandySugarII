        <Style x:Key="Common" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource SugarThemeRed}" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
