<Application
    x:Class="CnadySugar.Entry.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:CnadySugar.Entry"
    xmlns:s="https://github.com/canton7/Stylet">
    <Application.Resources>
        <s:ApplicationLoader>
            <s:ApplicationLoader.Bootstrapper>
                <local:Bootstrapper />
            </s:ApplicationLoader.Bootstrapper>

            <s:ApplicationLoader.MergedDictionaries>
                <hc:ThemeResources />
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml" />

                <ResourceDictionary Source="ConvertStyle.xaml" />

                <ResourceDictionary Source="pack://application:,,,/CandySugar.Resource;component/Styles/LightTheme.xaml" />
                <ResourceDictionary Source="pack://application:,,,/CandySugar.Resource;component/MergedStyle.xaml" />

                <ResourceDictionary Source="CandyStyle.xaml" />
                <!--<hc:Theme />-->
            </s:ApplicationLoader.MergedDictionaries>
        </s:ApplicationLoader>
    </Application.Resources>
</Application>
