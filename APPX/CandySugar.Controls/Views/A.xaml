<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="CandySugar.Controls.A"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Local="clr-namespace:CandySugar.Controls"
    xmlns:MC="clr-namespace:UraniumUI.Material.Controls;assembly=UraniumUI.Material"
    x:DataType="Local:AViewModel">
    <Grid>
        <ActivityIndicator
            HeightRequest="20"
            HorizontalOptions="Center"
            IsRunning="{Binding Activity}"
            IsVisible="{Binding Activity}"
            VerticalOptions="Start"
            WidthRequest="20"
            Color="{StaticResource Violet}" />
        <MC:TabView>
            <MC:TabItem Title="星期一">
                <MC:TabItem.ContentTemplate>
                    <DataTemplate>
                        <Label Text="123123" />
                    </DataTemplate>
                </MC:TabItem.ContentTemplate>
            </MC:TabItem>
        </MC:TabView>
    </Grid>
</ContentView>
