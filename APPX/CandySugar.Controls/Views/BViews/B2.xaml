<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CandySugar.Controls.B2"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Local="clr-namespace:CandySugar.Controls"
    x:DataType="Local:B2ViewModel"
    Background="{AppThemeBinding Dark={StaticResource Gray600},
                                 Light={StaticResource White}}">
    <WebView x:Name="Player">
        <WebView.GestureRecognizers>
            <PinchGestureRecognizer PinchUpdated="PinchEvent" />
        </WebView.GestureRecognizers>
    </WebView>
</ContentPage>